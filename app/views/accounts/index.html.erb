<h2>Accounting app</h2>
	<% if user_signed_in? %>
	<%=current_user.username%>你好
	<%= link_to "new your Account", new_account_path() %>
	<% else %>
	按下<%= link_to "登入", new_user_session_path %>以新增費用
	<% end %>

	<br>

	<% @accounts.each do |account|%>
		項目: <%= account.title%>  費用: <%= account.expense%>
		<%= link_to  "delete" , account_path(account) ,method:"delete"%>
		<%= link_to "edit", edit_account_path(account) %>
		<br>
	<% end %>